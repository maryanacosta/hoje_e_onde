<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hoje √â Onde?</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css"> 
</head>
<body>
    <header class="mb-3 border-bottom">
        <div class="py-4" style="background-color: #ff9900;">
            <div class="container">
                <a href="/" class="text-decoration-none d-inline-flex flex-column align-items-center">
                    <img src="/img/logo.png" alt="Logo Hoje √â Onde?" class="img-fluid mb-2" style="max-height: 90px;">
                </a>
            </div>
        </div>

        <div class="bg-white py-3">
            <div class="container d-flex flex-wrap justify-content-center">
                <a href="/calendario" class="btn btn-main me-2">üìÖ Calend√°rio</a>
                
                <form action="/" method="GET" class="me-auto w-100" style="max-width: 300px;">
                    <input 
                        type="search" 
                        class="form-control" 
                        name="busca" 
                        placeholder="üîç Pesquise um evento" 
                        value="<%= typeof buscaAtiva !== 'undefined' ? buscaAtiva : '' %>"
                    >
                </form>
                
                <% if (isLogged) { %>
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Ol√°, <%= userName %> üë§
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/area-usuario">Minha √Årea</a></li>
                            <li><a class="dropdown-item" href="/submeter-evento">Submeter Evento</a></li> 
    
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout">Sair</a></li>
                            
                            <% if (userTipo === 'admin') { %> 
                                <li><a class="dropdown-item text-danger" href="/admin">Painel Admin</a></li>
                            <% } %>
                        </ul>
        
                    </div>
                <% } else { %>
                    <a href="/login" class="btn btn-outline-secondary me-2">Login</a>
                    <a href="/cadastro" class="btn btn-main">Cadastro</a>
                <% } %>
            </div>
        </div>
    </header>

    <main class="container">
  
       
        <div class="d-flex justify-content-center align-items-center mb-4">
            <a href="<%= linkAnterior %>" class="text-decoration-none mx-3 text-secondary">< <%= exibicaoAnterior %></a>
            <h3 class="mx-3 text-warning"><%= dataExibicao %></h3> 
            <a href="<%= linkPosterior %>" class="text-decoration-none mx-3 text-secondary"><%= exibicaoPosterior %> ></a>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-white 
rounded shadow-sm">
            
            <div>
                <span class="text-muted me-3">Ordenar por:</span>
                <a href="?data=<%= dataBuscaAtiva %>&ordenar=horario&tipo=<%= filtroAtivo %>" 
                   class="btn btn-sm <%= ordenarAtivo === 'horario' ?
'btn-main' : 'btn-outline-secondary' %>">Hor√°rio</a>
                <a href="?data=<%= dataBuscaAtiva %>&ordenar=popularidade&tipo=<%= filtroAtivo %>" 
                   class="btn btn-sm <%= ordenarAtivo === 'popularidade' ?
'btn-main' : 'btn-outline-secondary' %>">Popularidade</a>
            </div>

            <div>
                <span class="text-muted me-3">Filtrar por Tipo:</span>
                <select class="form-select d-inline w-auto" id="filtroTipo" 
                        onchange="window.location.href = `/?data=<%= dataBuscaAtiva %>&ordenar=<%= ordenarAtivo %>&tipo=${this.value}`">
  
                   
                    <option value="todos" <%= filtroAtivo === 'todos' ? 'selected' : '' %>>Todos</option>
                    <% tiposDisponiveis.forEach(tipo => { %>
                        <option value="<%= tipo %>" 
<%= filtroAtivo === tipo ? 'selected' : '' %>>
                            <%= tipo %>
                        </option>
                    <% }); %>
                
</select>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% eventos.forEach(function(evento) { %>
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 d-flex flex-column">
                        <a href="<%= evento.id ? `/evento/${evento.id}` : '#' %>" class="text-decoration-none text-dark flex-grow-1">
                            <img src="/img/<%= evento.imagem || 'default_event.jpg' %>" class="card-img-top" alt="Banner do Evento">
                            <div class="card-body pb-1">
               
                                <% if (evento.id) { %>
                                    <span class="badge bg-success me-1 voting-span" 
                                        data-evento-id="<%= evento.id %>" 
                                        style="cursor: pointer; user-select: none;">
                                        üëç <span class="contador-likes"><%= evento.TotalPositivo || 0 %></span>
                                    </span>
                                <% } %>
                                <span class="badge bg-main mb-1"><%= evento.tipo %></span>
                                <h5 class="card-title"><%= evento.titulo %></h5>
                          
                                <p class="card-text">
                                    <small class="text-muted">üìç <%= evento.local %></small><br>
                                    <small class="text-muted">üïí <%= evento.duracao %></small>
             
                                </p>
                            </div>
                        </a>
                        
     
                        <% if (isLogged && evento.id) { %> 
                            <div class="p-3 d-flex justify-content-end align-items-center bg-white rounded-bottom" 
                                 style="border-top: 1px solid #eee;">
     
                                <button class="btn btn-main-bold btn-sm salvar-btn" 
                                        data-evento-id="<%= evento.id %>"> 
                         
                                    Salvar
                                </button>
                            </div>
                        <% } %>
  
                    </div>
                </div>
            <% });
%>
            
            <% for(let i=0; i < (3 - (eventos.length % 3)) % 3; i++) { %>
                <div class="col">
                    <div class="card h-100 bg-light border-0"></div>
                </div>
     
        <% } %>

        </div>
        
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.querySelectorAll('.salvar-btn').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault(); 
                e.stopPropagation(); 

                // CORRE√á√ÉO: Garante que √© um n√∫mero inteiro antes de enviar.
                const eventoId = parseInt(this.getAttribute('data-evento-id'), 10);
                const button = this;

                fetch('/salvar-evento', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ eventoId: eventoId })
                })
                .then(response => {
                    // Trata o redirecionamento (caso o usu√°rio tenha sido deslogado)
                    if (response.redirected) {
                        alert("Voc√™ precisa estar logado para salvar eventos. Redirecionando para o login.");
                        window.location.href = response.url; 
                        return;
                    }
                    return response.json();
                })
                .then(data => {
                    if (data && data.message) { 
                        alert(data.message);
                        if (data.success) { 
                            button.classList.remove('btn-outline-warning');
                            button.classList.add('btn-success');
                            button.innerText = 'Salvo ‚úÖ';
                        }
                    }
                })
                .catch(error => {
                    console.error('Erro:', error);
                    alert('Ocorreu um erro ao salvar o evento.');
                });
            });
        });
    </script>

</body>
</html>