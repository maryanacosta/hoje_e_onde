<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendário de Eventos - Hoje É Onde?</title>
    <link rel="icon" href="/img/favicon.png" type="image/png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css"> 
    <style>
        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 1px;
            border: 1px solid #ddd;
            background-color: #fff;
        }
        .day-header {
            background-color: #f0f0f0;
            text-align: center;
            padding: 8px 0;
            font-weight: bold;
            color: #333;
        }
        .day-cell {
            min-height: 120px;
            padding: 5px;
            border: 1px solid #eee;
            background-color: #fff;
            position: relative;
        }
        .day-number {
            font-size: 1.2rem;
            font-weight: bold;
            color: #ffaa00; /* Cor do tema */
            position: absolute;
            top: 5px;
            right: 5px;
        }
        .empty-day {
            background-color: #f8f8f8;
        }
        .event-chip {
            font-size: 0.75rem;
            display: block;
            margin-top: 3px;
            padding: 2px 5px;
            border-radius: 4px;
            text-decoration: none;
            color: #fff;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }
        /* Cores específicas para cada tipo de evento */
        .event-chip.Festa { background-color: #ffaa00; }
        .event-chip.Promocao { background-color: #0d6efd; }
        .event-chip.Oportunidade { background-color: #198754; }
        .event-chip.Outro { background-color: #6c757d; }
        .event-chip.EventoCulturalSocial { background-color: #dc3545; }

        .today-cell {
            border: 2px solid #ffaa00; 
            box-shadow: 0 0 5px rgba(255, 170, 0, 0.5);
        }

        .day-cell-link {
            text-decoration: none;
            color: inherit;
        }
        .day-cell-link, .day-cell {
            display: block;
            height: 100%;
        }
        .day-cell {
            min-height: 120px;
            padding: 5px;
            border: 1px solid #eee;
            background-color: #fff;
            position: relative;
            cursor: pointer;
            transition: background-color 0.2s;
        }
        .day-cell:hover {
            background-color: #f0f0f0; 
        }
        .event-chip {
            cursor: pointer; 
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-warning">Calendário de Eventos</h2>
            <a href="/" class="btn btn-outline-secondary">Voltar para a Home</a>
        </div>
        
        <% 
            const meses = ["Janeiro", "Fevereiro", "Março", "Abril", "Maio", "Junho", "Julho", "Agosto", "Setembro", "Outubro", "Novembro", "Dezembro"];
            
            // processa a data do mês ativo
            const mesAtivoData = new Date(mesAtivo + "-01T00:00:00");
            const anoAtivo = mesAtivoData.getFullYear();
            const mesIndex = mesAtivoData.getMonth();
            const nomeMes = meses[mesIndex] + " de " + anoAtivo;

            // determina o primeiro e o último dia do mês ativo
            const primeiroDia = new Date(anoAtivo, mesIndex, 1);
            const ultimoDia = new Date(anoAtivo, mesIndex + 1, 0);
            const diasNoMes = ultimoDia.getDate();
            
            // ajusta o dia de início (0=Dom, 1=Seg, ..., 6=Sab)
            // domingo já é 0 em JS
            const offset = primeiroDia.getDay(); 
            const diasDaSemana = ["Domingo", "Segunda", "Terça", "Quarta", "Quinta", "Sexta", "Sábado"];

            // organiza os eventos por dia
            const eventosPorDia = {};
            const hoje = new Date().toLocaleDateString('pt-BR', {
                timeZone: 'America/Sao_Paulo' 
            }).split('/').reverse().join('-');
            
            eventos.forEach(evento => {
                const dataKey = evento.data; // AAAA-MM-DD
                const mesEvento = dataKey.slice(0, 7);
                
                // Filtra apenas os eventos do mês ativo (a busca do app.js traz todos)
                if (mesEvento === mesAtivo) {
                    if (!eventosPorDia[dataKey]) eventosPorDia[dataKey] = [];
                    eventosPorDia[dataKey].push(evento);
                }
            });

            // links para navegação entre os meses
            const mesAnterior = new Date(mesAtivoData); mesAnterior.setMonth(mesIndex - 1);
            const mesPosterior = new Date(mesAtivoData); mesPosterior.setMonth(mesIndex + 1);
            const linkAnterior = `/calendario?mes=${mesAnterior.toISOString().slice(0, 7)}`;
            const linkPosterior = `/calendario?mes=${mesPosterior.toISOString().slice(0, 7)}`;
        %>

        <div class="d-flex justify-content-center align-items-center mb-4 p-3 bg-white rounded shadow-sm">
            <a href="<%= linkAnterior %>" class="btn btn-outline-secondary mx-3">← Mês Anterior</a>
            <h3 class="mx-5 text-warning mb-0"><%= nomeMes %></h3>
            <a href="<%= linkPosterior %>" class="btn btn-outline-secondary mx-3">Mês Posterior →</a>
        </div>
        
        <div class="calendar-grid shadow-lg">
            
            <% diasDaSemana.forEach(dia => { %>
                <div class="day-header"><%= dia %></div>
            <% }); %>

            <% for(let i = 0; i < offset; i++) { %>
                <div class="day-cell empty-day"></div>
            <% } %>

            <% for(let dia = 1; dia <= diasNoMes; dia++) { 
                const dataCompleta = anoAtivo + "-" + (mesIndex + 1).toString().padStart(2, '0') + "-" + dia.toString().padStart(2, '0');
                const isToday = dataCompleta === hoje;
                const temEvento = eventosPorDia[dataCompleta] && eventosPorDia[dataCompleta].length > 0;
            %>
                <a href="/?data=<%= dataCompleta %>" class="day-cell-link">
                    <div class="day-cell <%= isToday ? 'today-cell' : '' %> <%= temEvento ? 'has-event' : '' %>">
                        
                        <span class="day-number"><%= dia %></span>
                        
                        <% if (temEvento) { %>
                            <div class="event-chips-container mt-4"> 
                                <% eventosPorDia[dataCompleta].forEach(e => { %>
                                    <span class="event-chip <%= e.tipo.replace(/ /g, '').replace(/\//g, '') %>" 
                                       title="<%= e.titulo %> (<%= e.duracao %>)">
                                        <%= e.titulo %>
                                    </span>
                                <% }); %>
                            </div>
                        <% } %>
                    </div>
                </a>
            <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>